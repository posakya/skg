<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    app:cardUseCompatPadding="true"
    app:cardBackgroundColor="@color/white"
    app:cardElevation="4dp"
    tools:context=".side_menu.Home">

    <LinearLayout
        android:padding="10dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/txt_order_code"
                android:layout_alignParentLeft="true"
                android:fontFamily="@font/roboto"
                android:textColor="@color/black"
                android:text="Order Code"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/txt_created_date"
                android:layout_alignParentRight="true"
                android:fontFamily="@font/roboto_light"
                android:text="create date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </RelativeLayout>

        <TextView
            android:id="@+id/txt_site_code"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:layout_alignParentLeft="true"
            android:fontFamily="@font/roboto_light"
            android:textColor="@color/black"
            android:text="Site Code"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:paddingBottom="5dp"
            android:id="@+id/txt_place_by_name"
            android:layout_alignParentLeft="true"
            android:fontFamily="@font/roboto_light"
            android:textColor="@color/black"
            android:text="Order Name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/txt_order_name"
            android:layout_alignParentLeft="true"
            android:fontFamily="@font/roboto_light"
            android:textColor="@color/black"
            android:text="Order Name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />


        

    </LinearLayout>



</android.support.v7.widget.CardView>